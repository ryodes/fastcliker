{% extends 'base.html.twig' %}

{% block body %}
    <h1> Greeting and Welcome ! </h1>
    <h3> You wanna play a game ? </h3>
    
    {% if users|length > 0 %}   
        <div id="podium">
            <div id="premier" class="row">
                {% if users[0] is defined %}
                    <p><span class="reward">🥇</span><br> {{users[0].name}} </p>
                {% endif %}
            </div>
            <div class="row">
                <div id="deuxième" class="col">
                    {% if users[1] is defined %}
                        <p> <span class="reward">🥈</span><br> {{users[1].name}} </p>
                    {% endif %}    
                </div>
                <div id="troisième" class="col">
                    {% if users[2] is defined %}
                        <p><span class="reward">🥉</span><br> {{users[2].name}} </p>
                    {% endif %}
                </div>
                <col>
            </div>
        </div>
        {% else %}
        <hr>
    {% endif %}

    <div class="row" style="justify-content: center;">
        <p id="clics">Clics: <span id="nbclique"></span>🖱️</p>
    </div>
    <div class="row">
        <button id="reset" class="btn btn.secondary">reset 🔄</button>
    </div>
    <div class="row">
        <button id="clique" class="btn primary">CLIQUE</button>
    </div>

    <h3><span id="time"></span>⏱️</h3>
    <hr>

    <div class="row" style="justify-content: center;">
        <p>Entre ton pseudo pour impressionner tes amis.</p>
    </div>
    <div class="row">
        {{form_start(form)}}
            {{form_row(form._token)}}
            {{form(form)}}
        {{ form_end(form)}}
    </div>

    <hr>

    <div class="row" style="justify-content: center;">
        <p>Voici le classement des 10 meilleurs joueurs !</p>
    </div>

    <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Pseudo</th>
            <th scope="col">Clis</th>
          </tr>
        </thead>
        <tbody>
            {% for i in 0..(users|length)-1 %}    
                <tr>
                    <th scope="row">{{i+1}}</th>
                    <td>{{users[i].name}}</td>
                    <td>{{users[i].clics}}</td>
                </tr>
            {% endfor %}
        </tbody>
      </table>
{% endblock %}

{% block javascripts %}
    {% include "js.html.twig" %}    
{% endblock javascripts %}
