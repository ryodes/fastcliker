                <th scope="col">Pseudo</th>
                <th scope="col">Clis</th>
            {% else %}
                <th scope="col">Nickname</th>
                <th scope="col">Clicks</th>
            {% endif %}
          </tr>
        </thead>
        <tbody>
            {% for i in 0..(users|length)-1 %}    
                <tr>
                    <th scope="row">{{i+1}}</th>
